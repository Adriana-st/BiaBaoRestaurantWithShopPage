<style>
    body {
        background: url('images/baozi.png') no-repeat center center/cover;
        background-attachment: fixed;
        padding-top: 100px;
        min-height: 100vh;
        color: white;
    }
    h2 {
        color: #AD0E0E;
    }
    .content {
        color: black;
    }
</style>

<main class="container my-5 py-4 content">
    <div class="bg-white rounded-3 shadow-lg p-4 p-md-5" 
         style="max-width: 900px; margin: 0 auto; background-color: rgba(255, 255, 255, 0.95) !important;">
        
        <!-- Page Header -->
        <div class="text-center mb-5">
            <h1 class="display-4 text-brand-red fw-bold mb-2">Contact Us</h1>
            <p class="lead text-muted">We'd love to hear from you</p>
        </div>

        <!-- Visit Us Section -->
        <section class="mb-5 text-center">
            <h2 class="text-brand-red mb-4 fw-bold">
                <i class="bi bi-geo-alt-fill"></i> Visit Us
            </h2>
            <address class="mb-0">
                <div class="row g-3 justify-content-center">
                    <div class="col-md-4">
                        <div class="p-3 bg-light rounded">
                            <p class="mb-1 fw-bold">Address</p>
                            <p class="mb-0">123 Food Street<br>Sligo, Ireland</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 bg-light rounded">
                            <p class="mb-1 fw-bold">Phone</p>
                            <p class="mb-0">
                                <a href="tel:+353711234567" 
                                   class="visitUs text-decoration-none">(071) 123 4567</a>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 bg-light rounded">
                            <p class="mb-1 fw-bold">Email</p>
                            <p class="mb-0">
                                <a href="mailto:info@biabao.ie" 
                                   class="visitUs text-decoration-none">info@biabao.ie</a>
                            </p>
                        </div>
                    </div>
                </div>
            </address>
        </section>

        <!-- Opening Hours -->
        <section class="mb-5 text-center">
            <h2 class="text-brand-red mb-4 fw-bold">
                <i class="bi bi-clock-fill"></i> Opening Hours
            </h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td class="fw-bold bg-light">Monday - Friday</td>
                                    <td>12:00 PM - 10:00 PM</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold bg-light">Saturday - Sunday</td>
                                    <td>1:00 PM - 10:00 PM</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <!-- Google Maps -->
        <section class="mb-5">
            <h2 class="text-brand-red text-center mb-4 fw-bold">
                <i class="bi bi-map-fill"></i> Find Us on Google Maps
            </h2>
            <div class="ratio ratio-16x9 rounded overflow-hidden shadow">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2381.691358967786!2d-8.471509384798512!3d54.269695080184485!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x485ef560e76d1953%3A0x23f1b4c847c08d0!2sSligo%2C%20Ireland!5e0!3m2!1sen!2s!4v1234567890" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy">
                </iframe>
            </div>
        </section>

        <!-- Contact Form -->
        <section class="contact-form">
            <div class="text-center mb-4">
                <h2 class="text-danger fw-bold">
                    <i class="bi bi-envelope-fill"></i> Get in Touch
                </h2>
                <p class="text-muted">Send us a message and we'll respond as soon as possible</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <form action="/thankyou" method="get" class="needs-validation" novalidate>
                        <!-- Name Field -->
                        <div class="mb-4">
                            <label for="name" class="form-label fw-semibold">
                                Full Name <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                {{!-- <span class="input-group-text bg-light">
                                    <i class="bi bi-person-fill"></i>
                                </span> --}}
                                <input type="text" 
                                       class="form-control" 
                                       id="name" 
                                       name="name" 
                                       placeholder="Enter your full name" 
                                       required>
                                <div class="invalid-feedback">
                                    Please enter your name.
                                </div>
                            </div>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-4">
                            <label for="email" class="form-label fw-semibold">
                                Email Address <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                {{!-- <span class="input-group-text bg-light">
                                    <i class="bi bi-envelope-fill"></i>
                                </span> --}}
                                <input type="email" 
                                       class="form-control" 
                                       id="email" 
                                       name="email" 
                                       placeholder="Enter your email address" 
                                       required>
                                <div class="invalid-feedback">
                                    Please enter a valid email.
                                </div>
                            </div>
                        </div>

                        <!-- Message Field -->
                        <div class="mb-4">
                            <label for="message" class="form-label fw-semibold">
                                Message <span class="text-danger">*</span>
                            </label>
                            <textarea class="form-control form-control-lg" 
                                      id="message" 
                                      name="message" 
                                      rows="5" 
                                      placeholder="Type your message here..." 
                                      required></textarea>
                            <div class="invalid-feedback">
                                Please enter a message.
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm fw-bold">
                                <i class="bi bi-send-fill"></i> Send Message
                            </button>
                        </div>

                        <p class="text-center text-muted mt-3 mb-0">
                            <small>* Required fields</small>
                        </p>
                    </form>
                </div>
            </div>
        </section>
    </div>
</main>

<!-- Form Validation Script -->
<script>
(() => {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>