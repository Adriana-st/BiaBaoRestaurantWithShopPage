<style>
    body {
        background: linear-gradient(135deg, #141414 0%, #1a3d1a 100%);
        color: #fff;
        padding-top: 100px;
        min-height: 100vh;
    }

    .success-icon {
        font-size: 5rem;
        color: #28a745;
        animation: scaleIn 0.5s ease-out;
    }

    @keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    .order-detail-card {
        background-color: #1a1a1a;
        border: 2px solid #28a745;
    }
</style>

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <!-- Success Icon -->
            <div class="text-center mb-5">
                <div class="success-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <h1 class="display-3 fw-bold text-success mt-4">Order Successful!</h1>
                <p class="lead text-light mt-3">
                    Thank you for your order. We've received your payment and your delicious food is on its way!
                </p>
            </div>

            <!-- Order Details Card -->
            <div class="card order-detail-card mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0">
                        <i class="bi bi-receipt"></i> Order Summary
                    </h3>
                </div>
                <div class="card-body p-4">
                    
                    <!-- Order Number -->
                    <div class="alert alert-success mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Order Number:</strong>
                                <span id="orderNumber" class="ms-2"></span>
                            </div>
                            <div>
                                <strong>Order Date:</strong>
                                <span id="orderDate" class="ms-2"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Delivery Details -->
                    <h5 class="text-warning mb-3">
                        <i class="bi bi-truck"></i> Delivery Information
                    </h5>
                    <div class="bg-dark p-3 rounded mb-4">
                        <p class="mb-1" id="deliveryName"></p>
                        <p class="mb-1" id="deliveryAddress1"></p>
                        <p class="mb-1" id="deliveryAddress2"></p>
                        <p class="mb-0" id="deliveryAddress3"></p>
                    </div>

                    <!-- Order Items -->
                    <h5 class="text-warning mb-3">
                        <i class="bi bi-bag-check"></i> Order Items
                    </h5>
                    <div id="orderItemsList" class="mb-4">
                        <!-- Items will be loaded here -->
                    </div>

                    <!-- Order Total -->
                    <div class="border-top border-secondary pt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>€<span id="orderSubtotal">0.00</span></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Delivery:</span>
                            <span>€<span id="orderDelivery">3.50</span></span>
                        </div>
                        <hr class="border-secondary">
                        <div class="d-flex justify-content-between">
                            <span class="fs-4 fw-bold text-success">Total Paid:</span>
                            <span class="fs-3 fw-bold text-success">€<span id="orderTotal">0.00</span></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delivery Info -->
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="bi bi-clock-history"></i> Estimated Delivery Time
                </h5>
                <p class="mb-0">
                    Your order will arrive in approximately <strong>30-45 minutes</strong>. 
                    You will receive a confirmation email shortly.
                </p>
            </div>

            <!-- Actions -->
            <div class="d-grid gap-2 mb-4">
                <a href="/shop" class="btn btn-warning btn-lg fw-bold">
                    <i class="bi bi-cart-plus"></i> Order More
                </a>
                <a href="/" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-house"></i> Return to Home
                </a>
            </div>

            <!-- Additional Info -->
            <div class="text-center text-muted">
                <p class="mb-1">
                    <i class="bi bi-envelope"></i> A confirmation email has been sent to your registered email address.
                </p>
                <p class="mb-0">
                    <i class="bi bi-question-circle"></i> Questions about your order? 
                    <a href="/contact" class="text-warning">Contact us</a>
                </p>
            </div>

        </div>
    </div>
</main>

<!-- Order Success Script -->
<script>
    // Check if there's an order to display
    const lastOrder = JSON.parse(localStorage.getItem('lastOrder'));
    
    if (!lastOrder) {
        // No order found, redirect to shop
        alert("No order found. Please place an order first.");
        window.location.href = "/shop";
    } else {
        // Display order details
        displayOrderDetails(lastOrder);
        
        // Clear last order after displaying (optional - comment out to keep order history)
        // localStorage.removeItem('lastOrder');
    }

    function displayOrderDetails(order) {
        // Generate order number (random for demo)
        const orderNumber = 'BB' + Date.now().toString().slice(-8);
        document.getElementById('orderNumber').textContent = orderNumber;
        
        // Format and display order date
        const orderDate = new Date(order.date);
        const formattedDate = orderDate.toLocaleDateString('en-IE', {
            day: 'numeric',
            month: 'long',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });
        document.getElementById('orderDate').textContent = formattedDate;
        
        // Display delivery details
        const delivery = order.deliveryDetails;
        document.getElementById('deliveryName').textContent = 
            `${delivery.firstName} ${delivery.lastName}`;
        document.getElementById('deliveryAddress1').textContent = delivery.address1;
        document.getElementById('deliveryAddress2').textContent = delivery.address2;
        document.getElementById('deliveryAddress3').textContent = delivery.address3;
        
        // Display order items
        let itemsHTML = '';
        order.items.forEach(item => {
            itemsHTML += `
                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom border-secondary">
                    <div class="d-flex align-items-center gap-3">
                        <img src="${item.image}" alt="${item.name}" 
                             style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                        <div>
                            <div class="fw-bold">${item.name}</div>
                            <div class="text-muted small">€${item.price.toFixed(2)} × ${item.quantity}</div>
                        </div>
                    </div>
                    <div class="text-warning fw-bold fs-5">
                        €${(item.price * item.quantity).toFixed(2)}
                    </div>
                </div>
            `;
        });
        document.getElementById('orderItemsList').innerHTML = itemsHTML;
        
        // Calculate and display totals
        const subtotal = order.items.reduce((sum, item) => 
            sum + (item.price * item.quantity), 0);
        const delivery = subtotal >= 25 ? 0 : 3.50;
        const total = subtotal + delivery;
        
        document.getElementById('orderSubtotal').textContent = subtotal.toFixed(2);
        document.getElementById('orderDelivery').textContent = delivery.toFixed(2);
        document.getElementById('orderTotal').textContent = total.toFixed(2);
    }

    // Update cart counter to 0
    window.dispatchEvent(new Event('cartUpdated'));
</script>